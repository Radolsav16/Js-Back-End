<article class="recipe-detail">
  <img src="{{recipe.image}}" alt="{{recipe.title}}" />
  <h2>{{recipe.title}}</h2>
  <p>{{recipe.description}}</p>

  <h3>-----------------------------------------------------</h3>

  <h3>Ingredients:</h3>
  <p>{{recipe.ingredients}}</p>

  <h3>-----------------------------------------------------</h3>

  <h3>Instructions:</h3>
  <p>{{recipe.instructions}}</p>

  <h3>-----------------------------------------------------</h3>

  <h3>People Who Recommend: {{recomodations}}</h3>
</article>

<div class="command">
    {{#if isAuthor}}
  <a href="/recipes/edit/{{recipe._id}}">Edit</a>
  <a href="/recipes/{{recipe._id}}">Delete</a>
  {{/if}}

        {{#if isRecommended}}
        <a href="/">You've already recommended this recipe!</a>
        {{else}}
    <a href="/recommend/{{recipe._id}}">Recommend</a>
            
            {{/if}}

</div>