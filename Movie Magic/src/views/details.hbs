<section id="details-page">
  <div class="main_card">
    <div class="card_left">
      <div class="card_datails">

        <h1>{{data.title}}</h1>
        <div class="card-movie">
          <div class="first-info">
            <p class="card-genre">Genre: {{data.genre}}</p>
            <p class="card-director">Directror: {{data.director}}</p>

          </div>
          <div class="second-info">
            <p class="card-year">Year: {{data.year}}</p>
            <p class="card-ranking">Rating:
              <span id="stars">&#x2605; &#x2605; &#x2605; &#x2605;</span></p>
          </div>

        </div>

        <p class="disc">Description: {{data.description}}</p>
        <p class="card-category">Category: {{data.category}}</p>
        
       {{#if isUser}}

              <div class="details-btn">
                <a href="/cast-attach/{{data._id}}" class="details">Attach Cast</a>
                            <a id="edit-button" href="/movie/{{data._id}}/edit">Edit</a>
                            <a id="delete-button" href="/movie/{{data._id}}/delete">Delete</a>
               </div>

         {{/if}}      
      </div>
    </div>
    <div class="card_right">
      <img src={{data.imageURL}} alt="image" />
    </div>
  </div>
  <div class="main-cast-card">
    {{#each casts}}
      <div class="cast-card">
        <div class="card-img">
          <img
            src="{{imageURL}}"
            alt="cast"
          />
        </div>
        <div class="cast-info">
          <h1>{{name}}</h1>
          <h3>Age: {{age}}</h3>
          <h3>Born: {{born}}</h3>
          <h3>Name in Movie: {{nameInMovie}}</h3>
        </div>
      </div>
    {{/each}}
  </div>

</section>